@using System.Web.Services.Description
@using TAF.Utility
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">实物油料加油补签单</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <add-button title="新增"></add-button>
                </div>
                <div class="row">
                    <div class="col-md-12"><div class="pre-scrollable">
    <table class="table table-striped table-hover table-bordered " style="width: 2100px">
        <thead>
            <tr role="row">
                <th style="width: 200px;">
                    编号
                </th>
                <th style="width: 200px;">
                    车辆号牌
                </th>
                <th style="width: 100px;">
                    车辆型号
                </th>
                <th style="width: 100px;">
                    油料号
                </th>
                <th style="width: 100px;">
                    当前结余油料数量(升)
                </th>
                <th style="width: 100px;">
                    申请加油数量(升)
                </th>
                <th style="width: 100px;">
                    审批加油数量(升)
                </th>
                <th style="width: 400px;">
                    事由
                </th>
                <th style="width: 100px;">
                    驾驶员
                </th>
                <th style="width: 100px;">
                    审批人
                </th>
                <th style="width: 300px;">
                    申请时间
                </th>
                <th style="width: 100px;">
                    审批状态
                </th>
                <th style="width: 200px;">
                    操作
                </th>
            </tr>
            <tr role="row">
                <th>
                    <input type="text" class="form-control" placeholder="编号" v-model="queryEntity.code" />
                </th>
                <th>
                    <input type="text" class="form-control" placeholder="车辆号牌" v-model="queryEntity.cardCode" />
                </th>
                <th>
                </th>
                <th>
                    <select id="searchOctaneStoreId" style="width: 100%" v-model="queryEntity.octaneStoreId">
                        <option value="">请选择...</option>
                        @{
                            foreach (var item in ((List<KeyValue<string, Guid>>)ViewData["list1"]))
                            {
                                <option value="@item.Value">@item.Key</option>
                            }
                        }
                    </select>
                </th>
                <th>
                </th>
                <th>
                </th>
                <th>
                </th>
                <th>
                </th>
                <th>
                    <select id="searchDriverId" style="width: 100%" v-model="queryEntity.driverId">
                        <option value="">请选择...</option>
                        @{
                            foreach (var item in ((List<KeyValue<Guid, string>>)ViewData["list2"]))
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        }
                    </select>
                </th>
                <th>
                </th>
                <th>
                    <div class="row">
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="起" v-model="queryEntity.dateFrom" id="dateFrom" readonly="readonly" />
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="止" v-model="queryEntity.dateTo" id="dateTo" readonly="readonly" />
                        </div>
                    </div>
                </th>
                <th>
                    <select id="searchStatus" style="width: 100%" v-model="queryEntity.status">
                        <option value="">请选择...</option>
                        <option value="0">等待审核</option>
                        <option value="1">审核通过</option>
                        <option value="2">审核拒绝</option>
                    </select>
                </th>
                <th><search-command></search-command></th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="item in list">
                <td>{{item.code}}</td>
                <td>{{item.carCode}}</td>
                <td>{{item.carSpecifications}}</td>
                <td>{{item.octaneStoreName}}</td>
                <td>{{item.totalAmount}}</td>
                <td>{{item.amount}}</td>
                <td>{{item.auditingAmount}}</td>
                <td>{{item.note}}</td>
                <td>{{item.driverName}}</td>
                <td>{{item.auditorName}}</td>
                <td>{{item.date}}</td>
                <td>{{item.status}}</td>
                <td>
                </td>
            </tr>
        </tbody>
        <tfoot is="table-foot" colspan="13"></tfoot>
    </table>
</div>
</div>

