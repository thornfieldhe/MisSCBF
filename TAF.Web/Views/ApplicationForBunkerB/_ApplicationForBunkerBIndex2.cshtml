<template id="applicationForBunkerBFormBody2">
    <div id="form">
        <validator name="v">
            <form class="form-horizontal " name="form" novalidate>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">编号<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <label class=" control-label no-padding-left">{{item.code}}</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">油料号<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <select id="editOctaneStoreId" style="width: 100%" v-model="item.octaneStoreId">
                                    <option value="">请选择...</option>
                                    @{
                                        foreach (var item in (List<KeyValue<string, Guid>>)ViewData["list1"])
                                        {
                                            <option value="@item.Value">@item.Key</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">车牌号<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <select id="editCarId" style="width: 100%" v-model="item.carInfoId">
                                    <option value="">请选择...</option>
                                    @{
                                        foreach (var item in (List<KeyValue<string, Guid>>)ViewData["list3"])
                                        {
                                            <option value="@item.Value">@item.Key</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
               <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">申请金额<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                    <input type="number" class="form-control" placeholder="必填" id="amount" name="amount" v-model="item.amount" v-validate:amount="{int:true}"/>
                            </div>
                        </div>
                    </div>
                </div>
               <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">结余油料</label>
                            <div class="col-sm-10">
                                <label class=" control-label no-padding-left">{{item.totalAmount}}</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">驾驶员<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <select id="edithDriverId" style="width: 100%" v-model="item.driverId">
                                    <option value="">请选择...</option>
                                    @{
                                        foreach (var item in ((List<KeyValue<Guid, string>>)ViewData["list2"]))
                                        {
                                            <option value="@item.Key">@item.Value</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">加油时间<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <span class="input-icon icon-right">
                                    <input class="form-control  " placeholder="必填"  type="text" id="datePickerDate" readonly="readonly" v-model="item.date" name="date"  v-validate:date="{required:true,dateTime:true}">
                                    <i class="fa fa-calendar"></i>
                                </span>                    
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label no-padding-right">事由</label>
                            <div class="col-sm-10">
                                <textarea rows="4"  v-model="item.note"  class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </validator>
    </div>
</template>
<script src="~/Views/ApplicationForBunkerB/applicationForBunkerB2.js"></script>



