<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <h4 class="widget-caption">选择日期</h4>
            </div>
            <div class="widget-body">
                <div class="row">
                    <div class="col-sm-2">
                        <span class="input-icon icon-right">
                            <input class="form-control  " type="text" id="dateFrom" v-model="item.dateFrom">
                            <i class="fa fa-calendar"></i>
                        </span> 
                    </div>
                    <div class="col-sm-2">
                        <span class="input-icon icon-right">
                            <input class="form-control  " type="text" id="dateTo" v-model="item.dateTo" >
                            <i class="fa fa-calendar"></i>
                        </span> 
                    </div>
                    <div class="col-sm-2"><button type="button" class="btn edit" v-on:click="search()"><i class="fa fa-search"></i> 搜索</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div v-for="(index, item) in list">
    <h5 class="row-title before-palegreen">
         <i class="fa" :class="{'fa-check-square-o green':item.isCompleted,'fa-square-o':!item.isCompleted}"></i>{{item.name}}-{{item.isCompleted? ' 已完成':'未完成['+item.schedule+']'}}
    </h5>
    <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
                <div class="well with-header ">
                    <div class="header bordered-palegreen">{{item.name}}:{{item.goal}}</div>
                    <div class="body">
                        <div v-for="task in item.tasks">
                            <div class="widget">
                                <div class="widget-header">
                                    <span class="widget-caption">{{task.name}}</span>
                                    <div class="widget-buttons">
                                        <div class="progress toolbar-bordered progress-striped active" style="width: 150px;">
                                            <div class="progress-bar progress-bar-info "  role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{task.schedule}}% ">
                                                    {{task.schedule}}% 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="widget-body">
                                    <div v-for="log in task.dailyLogs">
                                        <h5><i class="fa fa-calendar"></i> {{log.date}}          [{{log.responsiblePerson}}]</h5>
                                        <div class="row">
                                            <div class="col-xs-2 col-md-2 col-md-offset-1 col-xs-offset-1">
                                                <p>{{log.note}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>
        </div>
    </div>
</div>





<script src="~/Scripts/dailogSummary.js"></script>