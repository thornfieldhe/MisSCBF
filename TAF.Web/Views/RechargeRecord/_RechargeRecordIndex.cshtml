@model List<TAF.Utility.KeyValue<string, Guid>>
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">油料分配记录</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <add-button title="新增"></add-button>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover table-bordered ">
                            <thead>
                                <tr role="row">
                                    <th style="width: 200px;">
                                        加油卡号
                                    </th>        
                                    <th style="width: 200px;">
                                        分配金额
                                    </th>        
                                    <th style="width: 200px;">
                                        分配前余额
                                    </th>        
                                    <th style="width: 400px;">
                                        分配时间
                                    </th>
                                    <th style="width: 200px;">
                                        操作
                                    </th>
                                </tr>
                                <tr role="row">
                                    <th>
                                    <select id="searchOilCardId" style="width: 100%" v-model="queryEntity.oilCardId">
                                        <option value="">请选择...</option>
                                        @{
                                            foreach (var item in Model)
                                            {
                                                <option value="@item.Value">@item.Key</option>
                                            }
                                        }
                                    </select>
                                    </th>        
                                    <th>
                                    </th>        
                                    <th>
                                    </th>        
                                    <th>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" placeholder="分配时间起" v-model="queryEntity.dateFrom" id="dateFrom" readonly="readonly" />
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="text" class="form-control" placeholder="分配时间止" v-model="queryEntity.dateTo" id="dateTo" readonly="readonly"/>
                                            </div>
                                        </div> 
                                    </th>        
                                    <th><search-command></search-command></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="item in list">
                                    <td>{{item.oilCardName}}</td>
                                    <td>{{item.amount}}</td>
                                    <td>{{item.hisAmount}}</td>
                                    <td>{{item.date}}</td>
                                    <td>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot is="table-foot" colspan="5"></tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<dialog-delete></dialog-delete>
<form-edit></form-edit>
<template id="rechargeRecordFormBody">
    <div id="form">
        <validator name="v">
            <form class="form-horizontal " name="form" novalidate>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">加油卡号<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <select id="searchEditOilCardId" style="width: 100%" v-model="item.oilCardId" name="oilcardid" v-validate:oilcardid="{required:true}">
                                    <option value="">请选择...</option>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <option value="@item.Value">@item.Key</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div> 
               <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">分配金额<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                    <input type="number" class="form-control" placeholder="必填" id="amount" name="amount" v-model="item.amount" v-validate:amount="{int:true}"/>
                            </div>
                        </div>
                    </div>
                </div>
               <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">分配前余额<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <label class="col-sm-2 control-label no-padding-right">{{item.hisAmount}}</label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </validator>
    </div>
</template>
<script src="~/Scripts/rechargeRecord.js"></script>



