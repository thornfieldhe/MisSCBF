@model List<TAF.Utility.KeyValue<string, Guid>>
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">油料卡</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <add-button title="新增"></add-button>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover table-bordered ">
                            <thead>
                                <tr role="row">
                                    <th style="width: 200px;">
                                        卡号
                                    </th>        
                                    <th style="width: 200px;">
                                        余额
                                    </th>        
                                    <th style="width: 200px;">
                                        车牌号
                                    </th>        
                                    <th style="width: 200px;">
                                        操作
                                    </th>
                                </tr>
                                <tr role="row">
                                    <th>
                                        <input type="text" class="form-control" placeholder="卡号" v-model="queryEntity.code" />
                                    </th>        
                                    <th>
                                    </th>        
                                    <th>
                                    <select id="searchCarInfoName" style="width: 100%" v-model="queryEntity.carInfoId">
                                        <option value="">请选择...</option>
                                        @{
                                            foreach (var item in Model)
                                            {
                                                <option value="@item.Value">@item.Key</option>
                                            }
                                        }
                                    </select>
                                    </th>        
                                    <th><search-command></search-command></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="item in list">
                                    <td>{{item.code}}</td>
                                    <td>{{item.amount}}</td>
                                    <td>{{item.carInfoName}}</td>
                                    <td></td>
                                </tr>
                            </tbody>
                            <tfoot is="table-foot" colspan="4"></tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<dialog-delete></dialog-delete>
<form-edit></form-edit>
<template id="oilCardFormBody">
    <div id="form">
        <validator name="v">
            <form class="form-horizontal " name="form" novalidate>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">卡号<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <span class="input-icon icon-right">
                                    <input type="text" class="form-control " placeholder="必填" name="code" v-model="item.code"  v-validate:code="{required:true}"/>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
               <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">余额<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                    <input type="number" class="form-control " placeholder="必填" id="amount" name="amount" v-model="item.amount" v-validate:amount="{int:true}"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">车牌号<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <select id="searchEditCarInfoId" style="width: 100%" v-model="item.carInfoId" name="carinfoid" v-validate:carinfoid="{required:true}">
                                    <option value="">请选择...</option>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <option value="@item.Value">@item.Key</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div> 
            </form>
        </validator>
    </div>
</template>
<script src="~/Scripts/oilCard.js"></script>



