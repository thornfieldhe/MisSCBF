@using System.Web.Optimization
@using Abp.Web.Mvc.Extensions
@model SCBF.Users.User
@{

    ViewBag.Title = "亿科环境信息管理系统";
}

    <!-- Navbar -->
<div class="navbar">
    <div class="navbar-inner">
        <div class="navbar-container">
            <!-- Navbar Barnd -->
            <div class="navbar-header pull-left">
                <a href="#" class="navbar-brand">
                    <small>
                        亿科环境信息管理系统
                    </small>
                </a>
            </div>
            <!-- /Navbar Barnd -->
            <!-- Account Area and Settings --->
            <div class="navbar-header pull-right">
                <div class="navbar-account">
                    <ul class="account-area">
                        <li>
                            <a class="navbar-brand" href="#">
                                <h5>欢迎您：@Model.Name !</h5>
                            </a>
                        </li>
                        <!-- /Account Area -->
                        <!-- Settings -->
                    </ul>
                    <div class="setting">
                        <a  title="登出" href="/Account/Logout">
                            <i class="icon fa fa-sign-out"></i>
                        </a>
                    </div>
                    <!-- Settings -->
                </div>
            </div>
            <!-- /Account Area and Settings -->
        </div>
    </div>
</div>
    <!-- /Navbar -->
<!-- Main Container -->
<div class="main-container container-fluid" id="menu">
    <!-- Page Container -->
    <div class="page-container">
        <!-- Page Sidebar -->
        <div class="page-sidebar" id="sidebar">
            <!-- Sidebar Menu -->
            <ul class="nav sidebar-menu">
                <li class="active child-menu">
                    <a href="#index">
                        <i class="menu-icon glyphicon glyphicon-home"></i>
                        <span class="menu-text"> 主页 </span>
                    </a>
                </li>
                <li v-for="item in list">
                    <a href="{{item.url}}" class="menu-dropdown">
                        <i class="{{item.icon}}"></i>
                        <span class="menu-text"> {{item.displayName}} </span>
                        <i class="menu-expand"></i>
                    </a>
                    <ul class="submenu">
                        <li v-for="i in item.items" class="child-menu">
                            <a href="{{i.url}}">
                                <span class="menu-text">{{i.displayName}}</span>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- /Sidebar Menu -->
        </div>

        <!-- /Page Sidebar -->
        <!-- Page Content -->
        <div class="page-content">
            <!-- Page Breadcrumb -->
            <div class="page-breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="fa fa-home"></i>
                        <a href="javascript:void(0)" onclick=" load(0) ">主页</a>
                    </li>
                </ul>
            </div>
            <!-- /Page Breadcrumb -->
            <!-- Page Header -->
            <div class="page-header position-relative">
                <div class="header-title">
                    <h1 id="bodyTitle">
                        主页
                    </h1>
                </div>
            </div>
            <!-- /Page Header -->
            <!-- Page Body -->
            <div class="page-body" id="main">

            </div>
            <!-- Page Body -->
        </div>
        <!-- Page Content -->
    </div>
    <!-- Page Container -->
</div>
@Html.Partial("_Template")


