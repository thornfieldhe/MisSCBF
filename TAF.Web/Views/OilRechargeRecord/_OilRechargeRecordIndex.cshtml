<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">实物油料入库单</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <add-button title="新增"></add-button>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover table-bordered ">
                            <thead>
                                <tr role="row">
                                    <th style="width: 200px;">
                                        编号
                                    </th>        
                                    <th style="width: 200px;">
                                        油料标号
                                    </th>        
                                    <th style="width: 200px;">
                                        数量(L)
                                    </th>        
                                    <th style="width: 200px;">
                                        代供单位
                                    </th>          
                                    <th style="width: 200px;">
                                        时间
                                    </th>        
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="item in list">
                                    <td>{{item.code}}</td>
                                    <td>{{item.rating}}</td>
                                    <td>{{item.amount}}</td>
                                    <td>{{item.storeName}}</td>
                                    <td>{{item.date}}</td>
                                </tr>
                            </tbody>
                            <tfoot is="table-foot" colspan="6"></tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<dialog-delete></dialog-delete>
<form-edit></form-edit>
<template id="oilRechargeRecordFormBody">
    <div id="form">
        <validator name="v">
            <form class="form-horizontal " name="form" novalidate>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">待供单位<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <select id="searchEditStoreId" style="width: 100%" v-model="item.storeId" name="octanceid" v-validate:storeId="{required:true}">
                                    <option value="">请选择...</option>
                                    @{
                                        foreach (var item in (List<SCBF.BaseInfo.Dto.SysDictionaryListDto>)ViewData["list1"])
                                        {
                                            <option value="@item.Id">@item.Value</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div> 
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">油料标号<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <select id="searchEditOctanceId" style="width: 100%" v-model="item.rating" name="rating" >
                                    <option value="">请选择...</option>
                                    @{
                                        foreach (var item in (List<SCBF.BaseInfo.Dto.SysDictionaryListDto>)ViewData["list2"])
                                        {
                                            <option value="@item.Id">@item.Value</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>                 
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">数量(L)<span class="red" >*</span></label>
                            <div class="col-sm-10">
                             <input type="number" v-model="item.amount" id="amount"/>
                            </div>
                        </div>
                    </div>
                </div> 
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">备注<span class="red" >*</span></label>
                            <div class="col-sm-10">
                                <span class="input-icon icon-right">
                                    <textarea rows="4" class="form-control "  name="note" v-model="item.note" ></textarea>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </validator>
    </div>
</template>
<script src="~/Scripts/oilRechargeRecord.js"></script>



