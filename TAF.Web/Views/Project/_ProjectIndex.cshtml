
<div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-primary">
                    <span class="widget-caption">项目管理</span>
                </div>
                <div class="widget-body">
                    <div class="table-toolbar">
                        <add-button title="新增"></add-button>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <table class="table table-striped table-hover table-bordered ">
                                <thead>
                                    <tr role="row">
                                        <th style="width: 400px;">
                                            项目名称
                                        </th>
                                        <th style="width: 200px;">
                                            任务项
                                        </th>
                                        <th style="width: 200px;">
                                            进度
                                        </th>
                                        <th style="width: 200px;">
                                            是否已完成
                                        </th>
                                        <th style="width: 200px;">
                                            操作
                                        </th>
                                    </tr>
                                    <tr role="row">
                                        <th>
                                            <input type="text" class="form-control" placeholder="项目名称" v-model="queryEntity.name" />
                                        </th>
                                        <th></th>
                                        <th></th>
                                        <th>
                                            <select id="searchIsCompleted" style="width: 100%" v-model="queryEntity.isCompleted">
                                                <option value="">请选择...</option>
                                                <option value="true">已完成</option>
                                                <option value="false">未完成</option>
                                            </select>
                                        </th>
                                        <th><search-command></search-command></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="item in list">
                                        <td>{{item.name}}</td>
                                        <td>{{item.taskItems}}</td>
                                        <td>{{item.schedule}}</td>
                                        <td>{{item.isCompleted}}</td>
                                        <td>
                                            <row-command :id="item.id" title="编辑" :name="item.name"></row-command>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot is="table-foot" colspan="5"></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<dialog-delete></dialog-delete>
<form-edit></form-edit>
<template id="projectFormBody">
    <div id="form">
        <validator name="v">
            <form class="form-horizontal " name="form" novalidate>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" :class="{'has-error':($v.name.required && $v.name.dirty),'has-success':$v.name.valid}">
                            <label class="col-sm-2 control-label no-padding-right">项目名称<span class="red">*</span></label>
                            <div class="col-sm-10">
                                <span class="input-icon icon-right">
                                    <input type="text" class="form-control " placeholder="项目名称" name="name" v-model="item.name"  v-validate:name="{required:true}" />
                                    <i class="form-control-feedback bv-no-label glyphicon glyphicon-remove" v-if="$v.name.required && $v.name.dirty"></i>
                                    <i class="form-control-feedback bv-no-label glyphicon glyphicon-ok" v-if="$v.name.valid"></i>
                                </span>
                                <small class="help-block" v-if="$v.name.required && $v.name.dirty">项目名称不能为空</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" :class="{'has-error':($v.goal.required && $v.goal.dirty),'has-success':$v.goal.valid}">
                            <label class="col-sm-2 control-label no-padding-right">项目目标<span class="red">*</span></label>
                            <div class="col-sm-10">
                                <span class="input-icon icon-right">
                                    <textarea type="text" class="form-control" placeholder="项目目标" name="goal" v-model="item.goal" v-validate:goal="{required:true}" rows="10" ></textarea>
                                    <i class="form-control-feedback bv-no-label glyphicon glyphicon-remove" v-if="$v.goal.required && $v.goal.dirty"></i>
                                    <i class="form-control-feedback bv-no-label glyphicon glyphicon-ok" v-if="$v.goal.valid"></i>
                                </span>
                                <small class="help-block" v-if="$v.goal.required && $v.goal.dirty">项目目标不能为空</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">任务项</label>
                            <div class="col-sm-10">
                                <label class="control-label">{{item.taskItems}}</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" >
                            <label class="col-sm-2 control-label no-padding-right">项目进度<span class="red">*</span></label>
                            <div class="col-sm-10">
                                <label class="control-label">
                                    {{item.schedule}}
                                </label>
                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-2 control-label no-padding-right">是否完成</label>
                            <div class="col-sm-10">
                                <div class="row">

                                        <div class="col-lg-4 col-sm-4 col-xs-4">
                                            <div class="checkbox">
                                                <label for="isCompleted">
                                                    <input type="checkbox" id="isCompleted" value="true" v-model="item.isCompleted" class="colored-success">
                                                    <span class=" text">是</span>
                                                </label>
                                            </div>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </validator>
    </div>
</template>
<script src="~/Scripts/project.js"></script>
