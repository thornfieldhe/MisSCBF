
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">物资报表</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-sm-2">
                            <input type="text" class="form-control" placeholder="起" v-model="queryEntity.dateFrom" id="dateFrom" readonly="readonly"  />
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" placeholder="止" v-model="queryEntity.dateTo" id="dateTo" readonly="readonly"  />
                        </div>
                        <div class="col-sm-8">
                            <a href="javascript:void(0)" class="btn edit" v-on:click="query(0)"><i class="fa  fa-search"></i> 查询</a>
                        </div>
                    </div>
                    </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover table-bordered ">
                            <thead>
                            <tr role="row">
                                <th style="width: 200px;">
                                    编码
                                </th>
                                <th style="width: 200px;">
                                    品名
                                </th>
                                <th style="width: 200px;">
                                    规格型号
                                </th>
                                <th style="width: 100px;">
                                    单位
                                </th>
                                <th style="width: 100px;">
                                    数量
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr v-for="item in list">
                                <td>{{item.code}}</td>
                                <td>{{item.productName}}</td>
                                <td>{{item.specifications}}</td>
                                <td>{{item.unit}}</td>
                                <td>
                                    <div v-if="item.amount<0">
                                        <span class="red">{{item.amount}}</span>
                                    </div>
                                    <div v-else>{{item.amount}}</div>
                                </td>
                            </tr>
                            </tbody>
                            <tfoot is="table-foot" colspan="5"></tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/stockChange.js"></script>



