                            <input type="file" name="fileUpload" id="fileUpload" class="fileUpload" title="上传加油卡消耗凭证单" />
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="pre-scrollable">
                            <table class="table table-striped table-hover table-bordered " style="width: 1600px">
                                <thead>
                                <tr role="row">
                                    <th style="width: 200px;">
                                        加油审批单号
                                    </th>
                                    <th style="width: 200px;">
                                        加油卡号
                                    </th>
                                    <th style="width: 100px;">
                                        加油时间
                                    </th>
                                    <th style="width: 200px;">
                                        事由
                                    </th>
                                    <th style="width: 100px;">
                                        原有金额
                                    </th>
                                    <th style="width: 100px;">
                                        加油金额
                                    </th>
                                    <th style="width: 100px;">
                                        剩余金额
                                    </th>
                                    <th style="width: 100px;">
                                        油料标号
                                    </th>
                                    <th style="width: 100px;">
                                        加油升数
                                    </th>
                                    <th style="width: 100px;">
                                        每升价格
                                    </th>
                                    <th style="width: 100px;">
                                        驾驶员
                                    </th>
                                    <th style="width: 200px;">
                                        备注
                                    </th>
                                    <th style="width: 100px;">
                                        操作
                                    </th>
                                </tr>
                                <tbody>
                                <tr v-for="item in list">
                                    <td>{{item.bunkerACode}}</td>
                                    <td>{{item.carCode}}</td>
                                    <td>{{item.date}}</td>
                                    <td>{{item.sy}}</td>
                                    <td>{{item.yyje}}</td>
                                    <td>{{item.jyje}}</td>
                                    <td>{{item.syje}}</td>
                                    <td>{{item.ylbh}}</td>
                                    <td>{{item.jysh}}</td>
                                    <td>{{item.msjg}}</td>
                                    <td>{{item.jsy}}</td>
                                    <td>{{item.note}}</td>
                                    <td>
                                        <button type="button" class="btn   edit" v-on:click="get(item.id)"><i class="fa fa-edit"></i> 保存</button>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
