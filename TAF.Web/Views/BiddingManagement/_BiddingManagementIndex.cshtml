@using SCBF.BaseInfo.Dto
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">招标文件管理</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <button type="button" class="btn btn-primary " v-on:click="showModifyDialog('新增招标文件',null)"><i class="fa  fa-plus"></i> 新增</button>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover table-bordered ">
                            <thead>
                            <tr role="row">
                                <th style="width: 200px;">
                                    采购项目编号
                                </th>
                                <th style="width: 150px;">
                                    采购类别
                                </th>
                                <th style="width: 150px;">
                                    采购方式
                                </th>
                                <th style="width: 200px;">
                                    采购项目
                                </th>
                                <th style="width: 200px;">
                                    招标代理机构
                                </th>
                                <th style="width: 150px;">
                                    最高限价(元)
                                </th>
                                <th style="width: 250px;">
                                    操作
                                </th>
                            </tr>
                            <tr role="row">
                                <th>
                                    <input type="text" class="form-control" placeholder="项目编号" v-model="queryEntity.code"/>
                                </th>
                                <th>
                                    <select id="searchCategory" style="width: 100%" v-model="queryEntity.category">
                                        <option value="">请选择...</option>
                                        <option value="Zccg">资产(物资)采购</option>
                                        <option value="Fwcg">服务采购</option>
                                        <option value="Xxhcg">信息化采购</option>
                                        <option value="Gccg">工程采购</option>
                                    </select>
                                </th>
                                <th>
                                    <select id="searchMode" style="width: 100%" v-model="queryEntity.mode">
                                        <option value="">请选择...</option>
                                        <option value="Yqzb">邀请招标</option>
                                        <option value="Jzxtp">竞争性谈判</option>
                                        <option value="Xjcg">询价采购</option>
                                        <option value="Bxcg">比选采购</option>
                                        <option value="GkzbZdjf">公开招标(最低价法)</option>
                                        <option value="GkzbZhpff">公开招标(综合评分法)</option>
                                        <option value="Dylycg">单一来源采购</option>
                                    </select>
                                </th>
                                <th>
                                    <input type="text" class="form-control" placeholder="项目名称" v-model="queryEntity.name"/>
                                </th>
                                <th>
                                    <select id="searchbiddingAgency" style="width: 100%" v-model="queryEntity.biddingAgencyId">
                                        <option value="">请选择...</option>
                                        @{
                                            foreach (var item in (List<SysDictionaryListDto>) ViewData["list1"])
                                            {
                                                <option value="@item.Id">@item.Value</option>
                                            }
                                        }
                                    </select>
                                </th>
                                <th>
                                </th>
                                <th>
                                    <button type="button" class="btn edit" v-on:click="query(0)"><i class="fa fa-search"></i> 搜索</button>
                                    <button type="button" class="btn edit" v-on:click="resetSearch()"><i class="fa fa-times"></i> 重置</button>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr v-for="item in list.items">
                                <td>{{item.code}}</td>
                                <td>{{item.category}}</td>
                                <td>{{item.mode}}</td>
                                <td>{{item.name}}</td>
                                <td>{{item.biddingAgency}}</td>
                                <td>{{item.total}}</td>
                                <td>
                                    <button type="button" class="btn   edit" v-on:click="showModifyDialog('编辑招标文件',item.id)"><i class="fa fa-edit"></i> 编辑</button>
                                    <button type="button" class="btn   edit" v-on:click="showModifyTendererDialog(item.id)"><i class="fa fa-edit"></i> 投标单位</button>
                                    <button type="button" class="btn btn-danger  " v-on:click="showDeleteDialog(item.id,item.name) "><i class="fa fa-trash-o"></i> 删除</button>
                                </td>
                            </tr>
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="12" class="DTTTFooter ">
                                    <div class="col-sm-4">
                                        <div class="dataTables_info" id="simpledatatable_info" role="status" aria-live="polite"> {{list.from}} - {{list.to}} / {{list.total}} </div>
                                    </div>
                                    <div class="col-sm-4 ">
                                        <div class="dataTables_paginate paging_bootstrap">
                                            <ul id="container" class="pagination"></ul>
                                        </div>

                                    </div>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 删除对话框 -->
<div class="bootbox modal fade modal-darkorange in" id="deleteBiddingManagementDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">删除</h4>
                <div v-model="title"></div>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">确认删除{{deleteEntity.name}}？</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"> <i class="fa   fa-mail-reply"></i> 取消</button>
                <button type="button" class="btn btn-danger" v-on:click="delete(deleteEntity.id)"><i class="fa   fa-trash-o"></i>删除</button>
            </div>
        </div>
    </div>
</div>


<div class="bootbox modal fade modal-primary in" id="modifyTendererDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">编辑投标单位</h4>
                <div v-model="title"></div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover table-bordered ">
                            <thead>
                            <tr role="row">
                                <th style="width: 50px;">
                                    序号
                                </th>
                                <th style="width: 200px;">
                                    投标单位
                                </th>
                                <th style="width: 150px;">
                                    操作
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr v-for="s in item.tenderers">
                                <td>{{$index+1}}</td>
                                <td>
                                    <div v-show="s.editStatus">
                                        <input class="form-control  " placeholder="名称" type="text" v-model="s.name">
                                    </div>
                                    <div v-show="!s.editStatus">{{s.name}}</div>
                                </td>
                                <td>
                                    <button type="button" class="btn   edit" v-on:click="saveTenderer(s)" v-show="s.editStatus && item.hasPrint"><i class="fa fa-floppy-o"></i>保存 </button>
                                    <button type="button" class="btn   edit" v-on:click="cancelTenderer(s)" v-show="s.editStatus && item.hasPrint"><i class="fa fa-mail-reply"></i>取消 </button>
                                    <button type="button" class="btn   edit" v-on:click="editTenderer(s)" v-show="!s.editStatus && item.hasPrint"><i class="fa fa-edit"></i> 编辑</button>
                                    <button type="button" class="btn btn-danger  " v-on:click="deleteTenderer($index) " v-show="!s.editStatus && item.hasPrint"><i class="fa fa-trash-o"></i>删除 </button>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class='fa   fa-mail-reply'></i>取消</button>
                <button type="button" class="btn btn-default" v-on:click="addTenderer()" v-show="item.hasPrint"><i class='fa   fa fa-plus'></i>新增投标单位</button>
                <button type="submit" class="btn btn-primary" v-on:click="saveTenderers()" v-show="item.hasPrint"><i class='fa    fa-floppy-o'></i>保存 </button>
            </div>
        </div>
    </div>
</div>


<!-- 编辑对话框 -->
<div class="bootbox modal fade modal-primary in" id="modifyBiddingManagementDialog">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">{{ modifyEntity.modifyTitle }}</h4>
    <div v-model="title"></div>
</div>
<div class="modal-body">
<div id="form">
<validator name="v">
<form class="form-horizontal " name="form" novalidate>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">采购计划<span class="red">*</span></label>
            <div class="col-sm-8">
                <select id="editplanId" style="width: 100%" v-model="item.planId" name="planId" :disabled='item.hasPrint' v-validate:planId="{required:true}">
                    <option value="">请选择...</option>
                    @{
                        foreach (var item in (List<TAF.Utility.KeyValue<Guid, string>>) ViewData["list2"])
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">招标代理机构<span class="red">*</span></label>
            <div class="col-sm-8">
                <select id="editbiddingAgencyId" style="width: 100%" v-model="item.biddingAgencyId" :disabled='item.hasPrint' name="biddingAgencyId" v-validate:biddingAgencyId="{required:true}">
                    <option value="">请选择...</option>
                    @{
                        foreach (var item in (List<SysDictionaryListDto>) ViewData["list1"])
                        {
                            <option value="@item.Id">@item.Value</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">评审专家<span class="red">*</span></label>
            <div class="col-sm-8">
                <div class="input-group">
                    <input type="text" class="form-control" readonly="readonly" id="expertName" name="expertName" v-model="item.expertName" v-validate:expertName="{required:true}"/>
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="button" v-on:click="getExpert()" :disabled='item.hasPrint'>随机抽取</button>
                    </span>
                </div>


                <span class="input-group-btn">
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">招标时间<span class="red">*</span></label>
            <div class="col-sm-8">
                <span class="input-icon icon-right">
                    <input class="form-control  " placeholder="必填" type="text" id="datePickerDate" :disabled='item.hasPrint' readonly="readonly" v-model="item.date" name="date" v-validate:date="{required:true,dateTime:true}">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">文件发售时间起<span class="red">*</span></label>
            <div class="col-sm-8">
                <span class="input-icon icon-right">
                    <input class="form-control  " placeholder="必填" type="text" id="datePickerPlanDateFrom" :disabled='item.hasPrint' readonly="readonly" v-model="item.planDateFrom" name="plandatefrom" v-validate:plandatefrom="{required:true,dateTime:true}">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">文件发售时间止<span class="red">*</span></label>
            <div class="col-sm-8">
                <span class="input-icon icon-right">
                    <input class="form-control  " placeholder="必填" type="text" id="datePickerPlanDateTo" readonly="readonly" :disabled='item.hasPrint' v-model="item.planDateTo" name="plandateto" v-validate:plandateto="{required:true,dateTime:true}">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">投标截至时间<span class="red">*</span></label>
            <div class="col-sm-8">
                <span class="input-icon icon-right">
                    <input class="form-control  " placeholder="必填" type="text" id="datePickerPlanDateEnd" readonly="readonly" :disabled='item.hasPrint' v-model="item.planDateEnd" name="plandateend" v-validate:plandateend="{required:true,dateTime:true}">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">项目最高造价<span class="red">*</span></label>
            <div class="col-sm-8">
                <input type="number" class="form-control" placeholder="必填" id="total" name="total" v-model="item.total" :disabled='item.hasPrint' v-validate:total="{number:true}"/>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">工期<span class="red">*</span></label>
            <div class="col-sm-8">
                <input type="number" class="form-control" placeholder="必填" id="schedule" name="schedule" v-model="item.schedule" :disabled='item.hasPrint' v-validate:schedule="{int:true}"/>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <label class="no-padding-left">采购清单</label>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered ">
            <thead>
            <tr role="row">
                <th style="width: 50px;">
                    序号
                </th>
                <th style="width: 100px;">
                    类别
                </th>
                <th style="width: 200px;">
                    配置
                </th>
                <th style="width: 100px;">
                    单位
                </th>
                <th style="width: 100px;">
                    数量
                </th>
                <th style="width: 150px;">
                    操作
                </th>
            </tr>
            </thead>
            <tbody>
            <tr v-for="r in item.costList">
                <td>{{$index+1}}</td>
                <td>
                    <div v-show="r.editStatus">
                        <input class="form-control  " placeholder="类别" type="text" v-model="r.category">
                    </div>
                    <div v-show="!r.editStatus">{{r.category}}</div>
                </td>
                <td>
                    <div v-show="r.editStatus">
                        <input class="form-control  " placeholder="配置" type="text" v-model="r.details">
                    </div>
                    <div v-show="!r.editStatus">{{r.details}}</div>
                </td>
                <td>
                    <div v-show="r.editStatus">
                        <input class="form-control  " placeholder="单位" type="text" v-model="r.unit">
                    </div>
                    <div v-show="!r.editStatus">{{r.unit}}</div>
                </td>
                <td>
                    <div v-show="r.editStatus">
                        <input class="form-control  " placeholder="数量" type="number" v-model="r.amount">
                    </div>
                    <div v-show="!r.editStatus">{{r.amount}}</div>
                </td>
                <td>
                    <button type="button" class="btn   edit" v-on:click="saveItem(r)" v-show="r.editStatus && !item.hasPrint"><i class="fa fa-floppy-o"></i></button>
                    <button type="button" class="btn   edit" v-on:click="cancelItem(r)" v-show="r.editStatus && !item.hasPrint"><i class="fa fa-mail-reply"></i> </button>
                    <button type="button" class="btn   edit" v-on:click="editItem(r)" v-show="!r.editStatus && !item.hasPrint">
                        <i class="fa fa-edit"></i>
                    </button>
                    <button type="button" class="btn btn-danger  " v-on:click="deleteItem($index) " v-show="!r.editStatus && !item.hasPrint">
                        <i class="fa fa-trash-o"></i>
                    </button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
</form>
</validator>
</div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal"><i class='fa   fa-mail-reply'></i>取消</button>
    <button type="button" class="btn btn-default" v-on:click="addDetail()" v-show="!item.hasPrint"><i class='fa   fa fa-plus'></i>新增清单</button>
    <button type="submit" class="btn btn-primary" v-on:click="save()" v-show="!item.hasPrint" disabled="{{!$v.valid }}"><i class='fa    fa-floppy-o'></i>保存 </button>
    <button type="submit" class="btn btn-primary" v-on:click="export()" disabled="{{!$v.valid}}"><i class='fa    fa    fa-print'></i>导出招标文件 </button>
</div>
</div>
</div>
</div>


<script src="~/Views/BiddingManagement/biddingManagement.js"></script>